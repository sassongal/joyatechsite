import React, { useState, useEffect } from 'react';
import { useParams, Link } from 'react-router-dom';
import { createPageUrl } from '@/utils';
import AnimatedElement from '../components/ui/AnimatedElement';
import { Calendar, Clock, User, ArrowLeft, Share2, Bookmark } from 'lucide-react';
import DOMPurify from 'dompurify';
import articlesData from '../../all-articles-final.json';

export default function MagazineArticle({ language = 'he' }) {
  const { id } = useParams();
  const rtl = language === 'he';
  const [article, setArticle] = useState(null);
  const [loading, setLoading] = useState(true);
  const [relatedArticles, setRelatedArticles] = useState([]);

  useEffect(() => {
    // Find the article by ID
    const foundArticle = articlesData.find(a => a.id === id);
    setArticle(foundArticle);

    if (foundArticle) {
      // Find related articles (same category, excluding current)
      const related = articlesData
        .filter(a => a.id !== id && a.category === foundArticle.category)
        .slice(0, 3);
      setRelatedArticles(related);
    }

    setLoading(false);
  }, [id]);

  const formatDate = (dateString) => {
    const date = new Date(dateString);
    return date.toLocaleDateString(rtl ? 'he-IL' : 'en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    });
  };

  const shareArticle = async () => {
    if (navigator.share) {
      try {
        await navigator.share({
          title: rtl ? article.title_he : article.title_en,
          text: rtl ? article.excerpt_he : article.excerpt_en,
          url: window.location.href,
        });
      } catch (err) {
        console.log('Error sharing:', err);
      }
    } else {
      // Fallback: copy to clipboard
      navigator.clipboard.writeText(window.location.href);
      // You could show a toast notification here
    }
  };

  if (loading) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-secondary-600"></div>
      </div>
    );
  }

  if (!article) {
    return (
      <section dir={rtl ? 'rtl' : 'ltr'} className="pt-28 pb-16">
        <div className="container mx-auto px-4 text-center">
          <h1 className="text-4xl font-bold text-white mb-4">
            {rtl ? 'מאמר לא נמצא' : 'Article Not Found'}
          </h1>
          <p className="text-slate-300 mb-8">
            {rtl ? 'המאמר שחיפשת לא קיים או הועבר' : 'The article you\'re looking for doesn\'t exist or has been moved'}
          </p>
          <Link
            to={createPageUrl('Magazine') + `?lang=${language}`}
            className="inline-flex items-center gap-2 bg-secondary-600 hover:bg-secondary-700 text-white px-6 py-3 rounded-lg font-medium transition-colors"
          >
            <ArrowLeft className="w-5 h-5" />
            {rtl ? 'חזור למגזין' : 'Back to Magazine'}
          </Link>
        </div>
      </section>
    );
  }

  // Sanitize content to prevent XSS attacks
  const rawContent = rtl ? article.content_he : article.content_en;
  const processedContent = rawContent
    .replace(/\n/g, '<br>')
    .replace(/^# (.+)$/gm, '<h1>$1</h1>')
    .replace(/^## (.+)$/gm, '<h2>$1</h2>')
    .replace(/^### (.+)$/gm, '<h3>$1</h3>')
    .replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>')
    .replace(/\*(.+?)\*/g, '<em>$1</em>');

  const sanitizedContent = DOMPurify.sanitize(processedContent, {
    ALLOWED_TAGS: ['h1', 'h2', 'h3', 'h4', 'p', 'br', 'strong', 'em', 'u', 'ul', 'ol', 'li', 'blockquote'],
    ALLOWED_ATTR: []
  });

  return (
    <section dir={rtl ? 'rtl' : 'ltr'} className="pt-28 pb-16">
      <div className="container mx-auto px-4">
        {/* Back Button */}
        <AnimatedElement animation="fadeIn" className="mb-8">
          <Link
            to={createPageUrl('Magazine') + `?lang=${language}`}
            className="inline-flex items-center gap-2 text-secondary-300 hover:text-white transition-colors"
          >
            <ArrowLeft className="w-5 h-5" />
            {rtl ? 'חזור למגזין' : 'Back to Magazine'}
          </Link>
        </AnimatedElement>

        {/* Article Header */}
        <AnimatedElement animation="fadeIn" className="mb-12">
          <div className="max-w-4xl mx-auto">
            {/* Category Badge */}
            <div className="mb-6">
              <span className="px-4 py-2 bg-secondary-500/20 text-secondary-300 rounded-full text-sm font-medium">
                {rtl ? 'מאמר' : 'Article'}
              </span>
            </div>

            {/* Title */}
            <h1 className="text-4xl md:text-5xl font-bold text-white mb-6 leading-tight">
              {rtl ? article.title_he : article.title_en}
            </h1>

            {/* Meta Info */}
            <div className="flex flex-wrap items-center gap-6 text-slate-400 mb-8">
              <div className="flex items-center gap-2">
                <User className="w-5 h-5" />
                <span>{article.author}</span>
              </div>
              <div className="flex items-center gap-2">
                <Calendar className="w-5 h-5" />
                <span>{formatDate(article.date)}</span>
              </div>
              <div className="flex items-center gap-2">
                <Clock className="w-5 h-5" />
                <span>{article.readTime} {rtl ? 'דקות קריאה' : 'min read'}</span>
              </div>
            </div>

            {/* Excerpt */}
            <p className="text-xl text-slate-300 leading-relaxed mb-8">
              {rtl ? article.excerpt_he : article.excerpt_en}
            </p>

            {/* Featured Image */}
            <div className="aspect-video rounded-2xl overflow-hidden mb-8">
              <img
                src={article.image}
                alt={rtl ? article.title_he : article.title_en}
                className="w-full h-full object-cover"
              />
            </div>

            {/* Action Buttons */}
            <div className="flex items-center gap-4">
              <button
                onClick={shareArticle}
                className="inline-flex items-center gap-2 px-4 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded-lg transition-colors"
              >
                <Share2 className="w-4 h-4" />
                {rtl ? 'שתף' : 'Share'}
              </button>
              <button className="inline-flex items-center gap-2 px-4 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded-lg transition-colors">
                <Bookmark className="w-4 h-4" />
                {rtl ? 'שמור' : 'Save'}
              </button>
            </div>
          </div>
        </AnimatedElement>

        {/* Article Content */}
        <AnimatedElement animation="fadeIn" className="mb-16">
          <div className="max-w-4xl mx-auto">
            <div className="glass-card rounded-2xl p-8 md:p-12 border border-white/10">
              <div
                className="prose prose-invert prose-lg max-w-none"
                dangerouslySetInnerHTML={{
                  __html: sanitizedContent
                }}
              />
            </div>
          </div>
        </AnimatedElement>

        {/* Tags */}
        {article.tags && article.tags.length > 0 && (
          <AnimatedElement animation="fadeIn" className="mb-12">
            <div className="max-w-4xl mx-auto">
              <h3 className="text-lg font-bold text-white mb-4">
                {rtl ? 'תגיות:' : 'Tags:'}
              </h3>
              <div className="flex flex-wrap gap-2">
                {article.tags.map((tag, index) => (
                  <span
                    key={index}
                    className="px-3 py-1 bg-slate-700 text-slate-300 rounded-full text-sm hover:bg-slate-600 transition-colors cursor-pointer"
                  >
                    #{tag}
                  </span>
                ))}
              </div>
            </div>
          </AnimatedElement>
        )}

        {/* Related Articles */}
        {relatedArticles.length > 0 && (
          <AnimatedElement animation="fadeIn">
            <div className="max-w-6xl mx-auto">
              <h2 className="text-2xl md:text-3xl font-bold text-white mb-8 text-center">
                {rtl ? 'מאמרים קשורים' : 'Related Articles'}
              </h2>
              <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                {relatedArticles.map((relatedArticle) => (
                  <article
                    key={relatedArticle.id}
                    className="glass-card rounded-xl overflow-hidden border border-white/10 hover:border-secondary-400/30 transition-all duration-300 group"
                  >
                    <Link to={createPageUrl('MagazineArticle').replace('magazinearticle', `magazine/${relatedArticle.id}`) + `?lang=${language}`}>
                      <div className="aspect-video overflow-hidden">
                        <img
                          src={relatedArticle.image}
                          alt={rtl ? relatedArticle.title_he : relatedArticle.title_en}
                          className="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                        />
                      </div>
                      <div className="p-6">
                        <div className="flex items-center gap-2 mb-3">
                          <span className="px-3 py-1 bg-secondary-500/20 text-secondary-300 rounded-full text-sm font-medium">
                            {rtl ? 'מאמר' : 'Article'}
                          </span>
                          <span className="text-slate-400 text-sm">•</span>
                          <div className="flex items-center gap-1 text-slate-400 text-sm">
                            <Clock className="w-4 h-4" />
                            {relatedArticle.readTime} {rtl ? 'דק׳' : 'min'}
                          </div>
                        </div>

                        <h3 className="text-lg font-bold text-white mb-3 group-hover:text-secondary-300 transition-colors line-clamp-2">
                          {rtl ? relatedArticle.title_he : relatedArticle.title_en}
                        </h3>

                        <p className="text-slate-300 mb-4 line-clamp-3 text-sm">
                          {rtl ? relatedArticle.excerpt_he : relatedArticle.excerpt_en}
                        </p>

                        <div className="flex items-center justify-between">
                          <div className="flex items-center gap-2 text-slate-400 text-sm">
                            <Calendar className="w-4 h-4" />
                            {formatDate(relatedArticle.date)}
                          </div>
                          <div className="text-secondary-300 group-hover:text-secondary-400 transition-colors text-sm font-medium">
                            {rtl ? 'קרא עוד' : 'Read More'} →
                          </div>
                        </div>
                      </div>
                    </Link>
                  </article>
                ))}
              </div>
            </div>
          </AnimatedElement>
        )}
      </div>
    </section>
  );
}