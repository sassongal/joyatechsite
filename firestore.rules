rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Block all client reads/writes to contactMessages (writes go through serverless function)
    match /contactMessages/{document} {
      allow read, write: if false;
    }

    // Default deny everything else (use server SDK/Rules per collection when needed)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
