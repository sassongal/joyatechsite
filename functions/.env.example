# Google Sheets API (Service Account)
SHEETS_ID=<<INSERT_SHEET_ID>>
SHEETS_CLIENT_EMAIL=your-service-account@project-id.iam.gserviceaccount.com
# Wrap the key in quotes and keep the \n line breaks exactly as given by Google
SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nPASTE_KEY_HERE\n-----END PRIVATE KEY-----\n"
SHEETS_RANGE=Leads!A1

# Email (Nodemailer SMTP/Gmail)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_USER=your_smtp_username_or_address
MAIL_PASS=your_smtp_password_or_app_password
MAIL_FROM="JoyaTech Leads <your_smtp_username_or_address>"
MAIL_TO=you@example.com

# Optional: Firestore collection override
LEADS_COLLECTION=contactMessages

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=5
RATE_LIMIT_COLLECTION=rateLimits
